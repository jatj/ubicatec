{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "removeComments": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "lib": [
      "es7",
      "es2017.object",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "filesGlob": [
    "*.ts",
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "res/*.ts",
    "res/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**"
  ]
}